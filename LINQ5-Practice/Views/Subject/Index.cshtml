@model List<tblSubject>

<h1>Subject List</h1>
<a asp-controller="Subject" asp-action="Create">Add New Subject</a>

<table class="table">
    <thead>
        <tr>
            <th>Subject ID</th>
            <th>Subject Name</th>
            <th>Subject Unit</th>
            <th>Course ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var sub in Model)
        {
            <tr>
                <td>@sub.SubjectId</td>
                <td>@sub.SubjectName</td>
                <td>@sub.SubjectUnit</td>
                <td>@sub.CourseId</td>
                <th><a asp-controller="Subject" asp-action="Edit" asp-route-id="@sub.SubjectId">Edit</a></th>
            </tr>
        }
    </tbody>
</table>